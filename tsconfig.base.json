{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["ES2020.Promise", "ES2020"],
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true
  }
}
